pipeline {
    agent any
    tools{
        maven 'MAVEN3'
    }
    environment {
    registry = '194271155227.dkr.ecr.us-east-1.amazonaws.com/devops-repo'
    registryCredential = 'jenkins-ecr'
    dockerimage = ''
  }
    stages {
        stage('Checkout'){
            steps{
                git branch: 'main', url: 'https://github.com/WilsonK001/helloworld-sep-22.git'
            }
        }
        stage('Code Build') {
            steps {
                sh 'mvn clean package'
            }
        }
        stage('Test') {
            steps {
                sh 'mvn test'
            }
        }
        stage('Build Image') {
            steps {
                script{
                    dockerImage = docker.build registry + ":$BUILD_NUMBER"
                } 
            }
        }
        stage('Deploy image') {
            steps{
                script{ 
                    docker.withRegistry('https://194271155227.dkr.ecr.us-east-1.amazonaws.com', registryCredential) {
                        dockerImage.push("{$env.BUILD_NUMBER}")
                        dockerImage.push("latest")
                    }
                }
            }
        }  
    }
}
